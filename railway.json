{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd website/backend && pip install -r requirements.txt"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/status",
    "healthcheckTimeout": 300,
    "startCommand": "cd website/backend && python -m uvicorn app:app --host 0.0.0.0 --port $PORT --log-level debug"
  }
}
